{
  "compilerOptions": {
    "target": "ES2020", // Ensures includes method is available
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["es2020", "dom"], // Ensure ES2020 is included
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
